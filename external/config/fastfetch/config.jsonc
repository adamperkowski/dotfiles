{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "display": {
    "color": "#b4befe",
    "separator": " :",

    "key": {
      "width": 17,
      "paddingLeft": 2,
      "type": "both"
    }
  },

  "logo": {
    "source": "auto",
    "color": {
      "1": "#b4befe",
      "2": "#cba6f7"
    },
    "padding": {
      "top": 1,
      "left": 2,
      "right": 2
    }
  },

  "modules": [
    "break",
    "break",
    {
      "type": "custom",
      "format": "\u001b[0;38;2;180;190;254mᓚ₍ ^. .^₎                ₍^. .^ ₎ᓗ\u001b[0m"
    },
    {
      "type": "custom",
      "format": "\u001b[0;38;2;203;166;247m╭──────────────────────────────────╮\u001b[0m"
    },
    {
      "type": "users",
      "key": "user    ",
      "keyIcon": " ",
      "format": "{name}"
    },
    {
      "type": "command",
      "shell": "/bin/sh",
      "text": "hostname",
      "key": "hostname",
      "keyIcon": " ",
      "format": "{result}"
    },
    {
      "type": "uptime",
      "key": "uptime  ",
      "keyIcon": " ",
      "format": "{days}d {hours}h {minutes}m"
    },
    {
      "type": "os",
      "key": "distro  ",
      "keyIcon": " ",
      "format": "{name} {version-id}"
    },
    {
      "type": "kernel",
      "key": "kernel  ",
      "keyIcon": " "
    },
    {
      "type": "command",
      "shell": "/bin/sh",
      "text": "kitget -V | cut -d ' ' -f2",
      "key": "kitget  ",
      "keyIcon": "󰄛 ",
      "format": "{result}"
    },
    {
      "type": "custom",
      "format": "\u001b[0;38;2;203;166;247m╰──────────────────────────────────╯\u001b[0m"
    }
  ]
}
